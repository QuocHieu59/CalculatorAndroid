<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#46957676"
    android:padding="6dp" >
    <LinearLayout android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="#ff000000"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="#ff000000"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp" >
        <Button
            android:id="@+id/backspaceBtn"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="BS"
            android:textSize="40dp"
            android:backgroundTint="#5B675E5E"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="CE"
            android:textSize="40dp"
            android:backgroundTint="#5B675E5E"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/clear_btn"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="50dp"
            android:backgroundTint="#5B675E5E"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btndiv"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="รท"
            android:textSize="50dp"
            android:backgroundTint="#5B675E5E"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="6dp" >
        <Button
            android:id="@+id/btn7"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnMul"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="*"
            android:textSize="50dp"
            android:backgroundTint="#5B675E5E"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="6dp" >
        <Button
            android:id="@+id/btn4"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnminus"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="50dp"
            android:backgroundTint="#5B675E5E"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp" >
        <Button
            android:id="@+id/btn1"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnadd"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="50dp"
            android:backgroundTint="#5B675E5E"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp" >
        <Button
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="+/-"
            android:textSize="30dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn0"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="."
            android:textSize="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnequal"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:text="="
            android:textSize="50dp"
            android:backgroundTint="#2196F3"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>